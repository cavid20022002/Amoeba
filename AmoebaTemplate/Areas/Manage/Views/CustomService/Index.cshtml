@using AmoebaTemplate.Models;
@model List<CustomService>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Service</h4>
            <p class="card-description">
                Services
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Icon
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Description
                            </th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (CustomService cs in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    @cs.Icon
                                </td>
                                <td>
                                    @cs.Title
                                </td>
                                <td>
                                    @cs.Description
                                </td>
                                <td>
                                    <a asp-controller="customservice" asp-action="update" asp-route-id="@cs.Id" class="btn btn-warning"><i class="mdi mdi-pencil"></i></a>
                                    <a asp-controller="customservice" asp-action="delete" asp-route-id="@cs.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                </td>
                            </tr>
                            

                        }
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>